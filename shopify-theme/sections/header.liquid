{%- style -%}
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: rgba(255, 254, 246, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(69, 147, 97, 0.1);
    transition: all 0.3s ease;
  }

  .site-header.scrolled {
    background-color: rgba(255, 254, 246, 0.98);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  @media (min-width: 1024px) {
    .header-container {
      padding: 0 246px;
    }
  }

  .logo {
    font-size: 24px;
    font-weight: 700;
    color: #111111;
    font-family: 'Petrona', serif;
    text-decoration: none;
    letter-spacing: 0.5px;
  }

  .logo:hover {
    color: #459361;
  }

  .nav-menu {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-link {
    font-size: 14px;
    font-weight: 600;
    color: #111111;
    font-family: 'Archivo', sans-serif;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #459361;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .cart-button {
    position: relative;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }

  .cart-button:hover {
    background-color: rgba(69, 147, 97, 0.1);
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: #459361;
    color: #FFFEF6;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 600;
  }

  /* 移动端菜单 */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  @media (max-width: 767px) {
    .nav-menu {
      display: none;
    }

    .mobile-menu-toggle {
      display: block;
    }
  }
{%- endstyle -%}

<header class="site-header" id="site-header">
  <div class="header-container">
    <!-- Logo -->
    <a href="/" class="logo">
      Cast & Grey
    </a>

    <!-- 导航菜单 -->
    <nav class="nav-menu">
      <a href="/collections/plants" class="nav-link">Plants</a>
      <a href="/collections/pots" class="nav-link">Pots</a>
      <a href="/pages/services" class="nav-link">Services</a>
      <a href="/blogs/plant-care" class="nav-link">Plant Care</a>
      <a href="/pages/about" class="nav-link">About</a>
    </nav>

    <!-- 头部操作 -->
    <div class="header-actions">
      <a href="/account/login" class="nav-link">Account</a>
      <button class="cart-button" onclick="window.location.href='/cart'">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="cart-count">{{ cart.item_count }}</span>
      </button>

      <!-- 移动端菜单按钮 -->
      <button class="mobile-menu-toggle">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</header>


{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "site-header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Cast & Grey"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
