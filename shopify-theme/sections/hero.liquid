{%- style -%}
  .hero-section {
    min-height: 85vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.3), rgba(0,0,0,0.5));
  }

  .hero-content {
    position: relative;
    z-index: 10;
    padding: 0 50px;
    text-align: center;
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding: 0 246px;
    }
  }

  .hero-title {
    font-size: 56px;
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: 0.72px;
    color: #FFFEF6;
    font-family: 'Petrona', serif;
    margin-bottom: 32px;
    animation: slideUp 1s ease-out;
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 72px;
    }
  }

  .hero-subtitle {
    font-size: 16px;
    line-height: 32px;
    letter-spacing: 0.8px;
    color: #FFFEF6;
    font-family: 'Archivo', sans-serif;
    margin-bottom: 64px;
    opacity: 0.9;
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    justify-content: center;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{%- endstyle -%}

<section class="hero-section">
  <!-- 背景图片 -->
  <div class="hero-background">
    {% if section.settings.background_image %}
      {{ section.settings.background_image | image_url: width: 1920 | image_tag }}
    {% else %}
      <img src="{{ 'storepicture.jpg' | asset_url }}" alt="">
    {% endif %}
    <div class="hero-overlay"></div>
  </div>

  <!-- 内容区域 -->
  <div class="hero-content">
    <div class="animate-fade-in">
      <h1 class="hero-title">
        {{ section.settings.title | default: 'Bring Nature Home' }}
      </h1>
      <p class="hero-subtitle">
        {{ section.settings.subtitle | default: 'Premium plants, expert care, and personalized service for urban plant lovers' }}
      </p>

      <!-- CTA 按钮 -->
      <div class="hero-buttons">
        {% if section.settings.primary_button_text %}
          <a href="{{ section.settings.primary_button_link }}" class="btn btn-on-dark btn-lg">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text %}
          <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary btn-lg">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Hero Title",
      "default": "Bring Nature Home"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Hero Subtitle",
      "default": "Premium plants, expert care, and personalized service for urban plant lovers"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "SHOP PLANTS"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "BOOK A SERVICE"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
