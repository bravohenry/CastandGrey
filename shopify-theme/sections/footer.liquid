{%- style -%}
  .site-footer {
    background-color: #111111;
    color: #FFFEF6;
    padding: 64px 0 32px;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 50px;
  }

  @media (min-width: 1024px) {
    .footer-container {
      padding: 0 246px;
    }
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 48px;
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer-section h3 {
    font-size: 18px;
    font-weight: 700;
    color: #FFFEF6;
    font-family: 'Petrona', serif;
    margin-bottom: 24px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-links a {
    color: rgba(255, 254, 246, 0.75);
    text-decoration: none;
    font-family: 'Archivo', sans-serif;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: #459361;
  }

  .footer-newsletter {
    background-color: rgba(255, 254, 246, 0.05);
    padding: 32px;
    border-radius: 12px;
    text-align: center;
  }

  .newsletter-title {
    font-size: 20px;
    font-weight: 700;
    color: #FFFEF6;
    font-family: 'Petrona', serif;
    margin-bottom: 16px;
  }

  .newsletter-description {
    color: rgba(255, 254, 246, 0.75);
    font-family: 'Archivo', sans-serif;
    margin-bottom: 24px;
    line-height: 1.6;
  }

  .newsletter-form {
    display: flex;
    gap: 12px;
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter-input {
    flex: 1;
    padding: 12px 16px;
    border: 2px solid rgba(255, 254, 246, 0.2);
    border-radius: 8px;
    background-color: rgba(255, 254, 246, 0.05);
    color: #FFFEF6;
    font-family: 'Archivo', sans-serif;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 254, 246, 0.5);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: #459361;
  }

  .newsletter-button {
    padding: 12px 24px;
    background-color: #459361;
    color: #FFFEF6;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-family: 'Archivo', sans-serif;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .newsletter-button:hover {
    background-color: #3a7a51;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 254, 246, 0.1);
    padding-top: 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-copyright {
    color: rgba(255, 254, 246, 0.5);
    font-family: 'Archivo', sans-serif;
    font-size: 14px;
  }

  .footer-social {
    display: flex;
    gap: 16px;
  }

  .social-link {
    color: rgba(255, 254, 246, 0.75);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: #459361;
  }

  @media (max-width: 767px) {
    .newsletter-form {
      flex-direction: column;
    }
  }
{%- endstyle -%}

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Shop 链接 -->
      <div class="footer-section">
        <h3>Shop</h3>
        <ul class="footer-links">
          <li><a href="/collections/plants">Plants</a></li>
          <li><a href="/collections/pots">Pots & Planters</a></li>
          <li><a href="/collections/tools">Tools</a></li>
          <li><a href="/collections/gift-cards">Gift Cards</a></li>
        </ul>
      </div>

      <!-- Services 链接 -->
      <div class="footer-section">
        <h3>Services</h3>
        <ul class="footer-links">
          <li><a href="/pages/consultation">Plant Consultation</a></li>
          <li><a href="/pages/delivery">Delivery</a></li>
          <li><a href="/pages/installation">Installation</a></li>
          <li><a href="/pages/maintenance">Maintenance</a></li>
        </ul>
      </div>

      <!-- Learn 链接 -->
      <div class="footer-section">
        <h3>Learn</h3>
        <ul class="footer-links">
          <li><a href="/blogs/plant-care">Plant Care Guides</a></li>
          <li><a href="/blogs/tips">Tips & Tricks</a></li>
          <li><a href="/pages/faq">FAQ</a></li>
          <li><a href="/pages/about">About Us</a></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer-section">
        <div class="footer-newsletter">
          <h3 class="newsletter-title">Stay Connected</h3>
          <p class="newsletter-description">
            Get plant care tips and exclusive offers delivered to your inbox.
          </p>
          <form class="newsletter-form" action="/contact#contact_form" method="post">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input
              type="email"
              name="contact[email]"
              class="newsletter-input"
              placeholder="Enter your email"
              required
            >
            <button type="submit" class="newsletter-button">Subscribe</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer 底部 -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        © {{ 'now' | date: '%Y' }} Cast & Grey Botanical. All rights reserved.
      </p>
      <div class="footer-social">
        <a href="#" class="social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>
        <a href="#" class="social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="m17 11.5-.034 2.5H15.5l.034-2.5H17z"></path>
            <path d="M12.5 11.5v2.5"></path>
            <path d="M8.5 11.5h2.5"></path>
            <circle cx="12.5" cy="7.5" r="1.5"></circle>
          </svg>
        </a>
        <a href="#" class="social-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

