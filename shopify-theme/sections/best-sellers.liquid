{%- style -%}
  .best-sellers-section {
    padding: 128px 0;
    background-color: #FFFEF6;
    border-top: 2px solid #459361;
  }

  .best-sellers-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 50px;
  }

  @media (min-width: 1024px) {
    .best-sellers-container {
      padding: 0 246px;
    }
  }

  .best-sellers-header {
    max-width: 1024px;
    margin: 0 auto 80px;
    text-align: center;
  }

  .best-sellers-title {
    font-size: 40px;
    line-height: 1.2;
    font-weight: 700;
    letter-spacing: 0.72px;
    color: #111111;
    font-family: 'Petrona', serif;
    margin-bottom: 16px;
  }

  @media (min-width: 1024px) {
    .best-sellers-title {
      font-size: 48px;
    }
  }

  .best-sellers-subtitle {
    font-size: 14.6px;
    line-height: 28.8px;
    letter-spacing: 0.6px;
    color: rgba(69, 147, 97, 0.75);
    font-family: 'Archivo', sans-serif;
  }

  .best-sellers-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    margin-bottom: 48px;
  }

  @media (min-width: 768px) {
    .best-sellers-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .best-sellers-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .product-card {
    background-color: #FFFEF6;
    border: 2px solid #459361;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0px 6px 0px rgba(132, 132, 132, 0.9);
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .product-card:hover {
    box-shadow: 0px 3px 0px rgba(132, 132, 132, 0.9);
    transform: translateY(3px);
  }

  .product-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-content {
    padding: 24px;
  }

  .product-title {
    font-size: 18px;
    line-height: 1.4;
    font-weight: 700;
    color: #111111;
    font-family: 'Petrona', serif;
    margin-bottom: 8px;
  }

  .product-price {
    font-size: 16px;
    font-weight: 600;
    color: #459361;
    font-family: 'Archivo', sans-serif;
    margin-bottom: 16px;
  }

  .product-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
  }

  .product-badge {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    font-family: 'Archivo', sans-serif;
    text-transform: uppercase;
  }

  .product-badge-new {
    background-color: #459361;
    color: #FFFEF6;
  }

  .product-badge-pet-safe {
    background-color: #FFFEF6;
    color: #459361;
    border: 1px solid #459361;
  }

  .product-meta {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: rgba(17, 17, 17, 0.6);
    font-family: 'Archivo', sans-serif;
  }

  .product-rating {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-top: 12px;
  }

  .star-rating {
    color: #ffd700;
    font-size: 14px;
  }

  .rating-text {
    font-size: 12px;
    color: rgba(17, 17, 17, 0.6);
    font-family: 'Archivo', sans-serif;
  }

  .view-all-link {
    display: block;
    text-align: center;
  }

  .view-all-text {
    font-size: 13.6px;
    line-height: 18.2px;
    letter-spacing: 0.6px;
    font-weight: 700;
    color: rgba(69, 147, 97, 0.75);
    font-family: 'Archivo', sans-serif;
    text-decoration: none;
    border-bottom: 2px solid rgba(69, 147, 97, 0.3);
    transition: all 0.2s ease;
    display: inline-block;
  }

  .view-all-text:hover {
    color: #459361;
    border-bottom-color: #459361;
  }
{%- endstyle -%}

<section class="best-sellers-section">
  <div class="best-sellers-container">
    <!-- 标题区域 -->
    <div class="best-sellers-header">
      <h2 class="best-sellers-title">
        {{ section.settings.title | default: 'Best Sellers' }}
      </h2>
      <p class="best-sellers-subtitle">
        {{ section.settings.subtitle | default: 'Our most loved plants' }}
      </p>
    </div>

    <!-- 产品网格 -->
    <div class="best-sellers-grid">
      {% for product in section.settings.collection.products limit: section.settings.products_count %}
        <a href="{{ product.url }}" class="product-card">
          <div class="product-image">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 400 | image_tag: alt: product.title }}
            {% else %}
              <div style="width: 100%; height: 100%; background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
                No Image
              </div>
            {% endif %}
          </div>

          <div class="product-content">
            <h3 class="product-title">{{ product.title }}</h3>
            <div class="product-price">
              {{ product.price | money }}
            </div>

            <!-- 徽章 (如果有标签) -->
            {% if product.tags %}
              <div class="product-badges">
                {% for tag in product.tags limit: 2 %}
                  <span class="product-badge product-badge-new">{{ tag }}</span>
                {% endfor %}
              </div>
            {% endif %}

            <!-- 产品评分 (如果使用产品评价应用) -->
            {% if product.metafields.reviews.rating %}
              <div class="product-rating">
                <div class="star-rating">
                  {% for i in (1..5) %}
                    {% if product.metafields.reviews.rating >= i %}
                      ★
                    {% else %}
                      ☆
                    {% endif %}
                  {% endfor %}
                </div>
                <span class="rating-text">
                  {{ product.metafields.reviews.rating }} ({{ product.metafields.reviews.count | default: 0 }})
                </span>
              </div>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>

    <!-- 查看全部链接 -->
    {% if section.settings.view_all_link %}
      <div class="view-all-link">
        <a href="{{ section.settings.view_all_link }}" class="view-all-text">
          {{ section.settings.view_all_text | default: 'VIEW ALL' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Best Sellers",
  "tag": "section",
  "class": "best-sellers-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Our most loved plants"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of Products",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Text",
      "default": "VIEW ALL"
    }
  ],
  "presets": [
    {
      "name": "Best Sellers"
    }
  ]
}
{% endschema %}
