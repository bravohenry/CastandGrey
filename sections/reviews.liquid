{%- style -%}
  .reviews-section {
    padding: 128px 0;
    background-color: #FFFEF6;
  }

  .reviews-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 50px;
  }

  @media (min-width: 1024px) {
    .reviews-container {
      padding: 0 246px;
    }
  }

  .reviews-header {
    max-width: 768px;
    margin: 0 auto 80px;
    text-align: center;
  }

  .reviews-title {
    font-size: 40px;
    line-height: 1.2;
    font-weight: 700;
    letter-spacing: 0.72px;
    color: #111111;
    font-family: 'Petrona', serif;
    margin-bottom: 16px;
  }

  @media (min-width: 1024px) {
    .reviews-title {
      font-size: 48px;
    }
  }

  .reviews-subtitle {
    font-size: 13px;
    line-height: 18px;
    letter-spacing: 0.7px;
    color: rgba(69, 147, 97, 0.75);
    font-family: 'Archivo', sans-serif;
    text-transform: uppercase;
    font-weight: 700;
  }

  .reviews-carousel {
    max-width: 1024px;
    margin: 0 auto;
    position: relative;
  }

  .review-item {
    background-color: #FFFEF6;
    border: 2px solid #459361;
    border-radius: 12px;
    padding: 32px;
    margin: 0 16px;
    box-shadow: 0px 6px 0px rgba(132, 132, 132, 0.9);
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }

  .review-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .star {
    color: #ffd700;
    font-size: 16px;
  }

  .star-empty {
    color: #e0e0e0;
    font-size: 16px;
  }

  .review-verified {
    font-size: 12px;
    color: #459361;
    font-weight: 600;
    font-family: 'Archivo', sans-serif;
    text-transform: uppercase;
  }

  .review-content {
    font-size: 16px;
    line-height: 24px;
    color: #111111;
    font-family: 'Archivo', sans-serif;
    margin-bottom: 16px;
  }

  .review-author {
    font-size: 14px;
    font-weight: 700;
    color: #111111;
    font-family: 'Petrona', serif;
    margin-bottom: 4px;
  }

  .review-date {
    font-size: 12px;
    color: rgba(17, 17, 17, 0.6);
    font-family: 'Archivo', sans-serif;
  }

  /* 简单的轮播样式 */
  .reviews-wrapper {
    overflow: hidden;
    position: relative;
  }

  .reviews-track {
    display: flex;
    width: calc(100% * 3); /* 3倍宽度用于循环 */
    animation: slideReviews 20s linear infinite;
  }

  .reviews-track:hover {
    animation-play-state: paused;
  }

  .review-slide {
    flex: 0 0 100%;
    display: flex;
    justify-content: center;
  }

  @keyframes slideReviews {
    0% { transform: translateX(0); }
    33.33% { transform: translateX(-33.33%); }
    66.66% { transform: translateX(-66.66%); }
    100% { transform: translateX(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* 移动端样式 */
  @media (max-width: 767px) {
    .review-item {
      margin: 0;
      padding: 24px;
    }

    .reviews-track {
      animation: none;
    }

    .review-slide {
      flex: 0 0 100%;
    }
  }
{%- endstyle -%}

<section class="reviews-section">
  <div class="reviews-container">
    <!-- 标题区域 -->
    <div class="reviews-header">
      <h2 class="reviews-title">
        {{ section.settings.title | default: 'What Our Customers Say' }}
      </h2>
      <p class="reviews-subtitle">
        {{ section.settings.subtitle | default: 'Rated 4.9/5 from over 500 reviews' }}
      </p>
    </div>

    <!-- 评论轮播 -->
    <div class="reviews-carousel">
      <div class="reviews-wrapper">
        <div class="reviews-track">
          {% for block in section.blocks %}
            <div class="review-slide">
              <div class="review-item">
                <div class="review-rating">
                  <div class="stars">
                    {% for i in (1..5) %}
                      {% if block.settings.rating >= i %}
                        <span class="star">★</span>
                      {% else %}
                        <span class="star-empty">☆</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                  {% if block.settings.verified %}
                    <span class="review-verified">Verified Purchase</span>
                  {% endif %}
                </div>

                <p class="review-content">
                  {{ block.settings.content }}
                </p>

                <div class="review-author">
                  {{ block.settings.author }}
                </div>
                <div class="review-date">
                  {{ block.settings.date }}
                </div>
              </div>
            </div>
          {% endfor %}

          <!-- 重复评论用于无缝循环 -->
          {% for block in section.blocks limit: 3 %}
            <div class="review-slide">
              <div class="review-item">
                <div class="review-rating">
                  <div class="stars">
                    {% for i in (1..5) %}
                      {% if block.settings.rating >= i %}
                        <span class="star">★</span>
                      {% else %}
                        <span class="star-empty">☆</span>
                      {% endif %}
                    {% endfor %}
                  </div>
                  {% if block.settings.verified %}
                    <span class="review-verified">Verified Purchase</span>
                  {% endif %}
                </div>

                <p class="review-content">
                  {{ block.settings.content }}
                </p>

                <div class="review-author">
                  {{ block.settings.author }}
                </div>
                <div class="review-date">
                  {{ block.settings.date }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Reviews",
  "tag": "section",
  "class": "reviews-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Rated 4.9/5 from over 500 reviews"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Review Content",
          "default": "Absolutely love my new plant! It arrived in perfect condition and the care instructions were so helpful."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name",
          "default": "Sarah Martinez"
        },
        {
          "type": "checkbox",
          "id": "verified",
          "label": "Verified Purchase",
          "default": true
        },
        {
          "type": "text",
          "id": "date",
          "label": "Review Date",
          "default": "October 2025"
        }
      ]
    }
  ],
