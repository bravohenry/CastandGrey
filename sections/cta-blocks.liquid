{%- style -%}
  .cta-blocks-section {
    padding: 128px 0;
    background-color: #459361;
    border-top: 2px solid #FFFEF6;
  }

  .cta-blocks-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 50px;
  }

  @media (min-width: 1024px) {
    .cta-blocks-container {
      padding: 0 246px;
    }
  }

  .cta-blocks-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
  }

  @media (min-width: 768px) {
    .cta-blocks-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .cta-block {
    background-color: transparent;
    border: 2px solid #FFFEF6;
    border-radius: 12px;
    padding: 48px 32px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .cta-block:hover {
    background-color: rgba(255, 254, 246, 0.05);
    transform: translateY(-2px);
  }

  .cta-block-title {
    font-size: 28.8px;
    line-height: 36px;
    font-weight: 700;
    letter-spacing: 0.72px;
    color: #FFFEF6;
    font-family: 'Petrona', serif;
    margin-bottom: 16px;
  }

  .cta-block-description {
    font-size: 14.6px;
    line-height: 28.8px;
    letter-spacing: 0.6px;
    color: rgba(255, 254, 246, 0.75);
    font-family: 'Archivo', sans-serif;
    margin-bottom: 32px;
    min-height: 58px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cta-block-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #FFFEF6;
    color: #111111;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-family: 'Archivo', sans-serif;
    text-transform: uppercase;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
  }

  .cta-block-button:hover {
    background-color: rgba(255, 254, 246, 0.9);
    transform: translateY(-1px);
  }
{%- endstyle -%}

<section class="cta-blocks-section">
  <div class="cta-blocks-container">
    <div class="cta-blocks-grid">
      {% for block in section.blocks %}
        <div class="cta-block">
          <h3 class="cta-block-title">
            {{ block.settings.title }}
          </h3>
          <p class="cta-block-description">
            {{ block.settings.description }}
          </p>
          <a href="{{ block.settings.link }}" class="cta-block-button">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA Blocks",
  "tag": "section",
  "class": "cta-blocks-section",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "cta_block",
      "name": "CTA Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Block Title",
          "default": "Shop Now"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Block Description",
          "default": "Browse our full collection of plants and accessories"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link",
          "default": "/collections/plants"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Explore Shop"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA Blocks",
      "blocks": [
        {
          "type": "cta_block",
          "settings": {
            "title": "Shop Now",
            "description": "Browse our full collection of plants and accessories",
            "link": "/collections/plants",
            "button_text": "Explore Shop"
          }
        },
        {
          "type": "cta_block",
          "settings": {
            "title": "Book Service",
            "description": "Get professional help with plant care and installation",
            "link": "/pages/services",
            "button_text": "View Services"
          }
        },
        {
          "type": "cta_block",
          "settings": {
            "title": "Learn Plant Care",
            "description": "Access our comprehensive plant care guides",
            "link": "/blogs/plant-care",
            "button_text": "Read Guides"
          }
        }
      ]
    }
  ]
}
{% endschema %}
